{{#if addNewAnswer}}
  <h5>New Answer</h5>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder="Your name"}}
      </div>
      <div class="form-group">
        <label for="body">Body:</label>
        {{textarea class="form-control" value=body id="body" placeholder="Enter your answer"}}
      </div>
      <button class="btn btn-sm btn-default" {{action 'saveAnswer'}}>Post</button>
    </form>
  </div>
  <hr>
{{else}}
  <button class="btn btn-sm btn-default" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
