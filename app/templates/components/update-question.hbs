{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s question.</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input class="form-control" value=updateAuthor id="updateAuthor" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=updateTitle id="updateTitle" placeholder=question.title}}
      </div>
      <div class="form-group">
        <label for="body">Body:</label>
        {{textarea class="form-control" value=updateBody id="updateBody" placeholder=question.body}}
      </div>
      <button class="btn btn-sm btn-info" {{action 'updateQuestion' question}}>Save</button>
    </form>
  </div>
  {{else}}
  <button class="btn btn-sm btn-warning" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
